<header class="navbar navbar-fixed-top">
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <ul class="nav navbar-nav navbar-left menu">
        <li><%= link_to t("framgia_test"), root_path, class: "title" %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right menu">
        <li><%= link_to t("home"), root_path %></li>
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li>
              <%= link_to t("users-title"), admin_users_path %>
            </li>
            <li>
              <%= link_to t("exams-title"), admin_exams_path %>
            </li>
            <li>
              <%= link_to t("subjects-title"), admin_subjects_path %>
            </li>
            <li>
              <%= link_to t("questions-title"), admin_questions_path %>
            </li>
          <% end %>
          <li>
            <%= link_to t("contribute_question"),
              user_questions_path(current_user) %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), edit_user_registration_path %></li>
              <li>
                <%= link_to t("log_out"), destroy_user_session_path,
                  method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("sign_up"), new_user_registration_path %></li>
          <li><%= link_to t("sign_in"), new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
